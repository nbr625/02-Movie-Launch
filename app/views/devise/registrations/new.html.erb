<h2 class="form_title">Sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal, label_col: "col-sm-0", control_col: "col-sm-4") do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, hide_label: true, placeholder: "Email" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em class="form_title">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", hide_label: true, placeholder: "Password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", hide_label: true, placeholder: "Password Confirmation" %>
  </div>

  <div class="field">
    <%= f.file_field :avatar, hide_label: true, class: "btn btn-default"%>
  </div>

  <div class="actions">
    <%= f.submit "Join!" %>
  </div>
<% end %>

