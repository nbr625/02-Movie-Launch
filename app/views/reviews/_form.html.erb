<%= bootstrap_form_for([@movie, @review], layout: :horizontal, label_col: "col-sm-0", control_col: "col-sm-4") do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div id="star-rating" ></div>
  </div>
  <br/>
  <div class="field">
    <%= f.text_area :comment, hide_label: true, placeholder: "Critique", id: "comment" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
  $('#star-rating').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
